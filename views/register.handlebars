<form id="register-form" method="POST" action="/register">
    <label for="username">Username:</label>
    <input type="text" name="username" id="username" required="rquired">
    <label for="email">email:</label>
    <input type="text" name="email" id="email" required="rquired">
    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" id="firstName" required="rquired">
     <label for="lastName">Last Name:</label>
    <input type="text" name="lastName" id="lastName" required="rquired">
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required="rquired">
     <label for="description">Tell us a bit about yourself:</label>
    <textarea type="text" name="description" id="description" required="rquired"></textarea>
    <button type="Submit" value="Submit">Submit</button>
    {{#if error}}
        <p class="error">Please complete all fields</p>
    {{/if}}

</form>